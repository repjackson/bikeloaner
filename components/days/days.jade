template(name='scheduling')
    h1.ui.center.aligned.header Volunteer Management
    #add_day.ui.basic.button Add Day
    table.ui.definition.celled.selectable.table
        thead
            tr
                th
                th from 9:30 - 1:00
                th from 1:00 - 4:30
        tbody
            each volunteer_days
                tr
                    td #{formatted_date}
                    td 
                        .ui.list
                            each slot_1_volunteers
                                .item #{this}
                        if signed_up
                            .ui.basic.button
                                i.red.remove.icon
                                | Leave
                        else
                            .ui.basic.button
                                i.green.plus.icon
                                | Join
                            
                    td 
                        .ui.list
                            each slot_2_volunteers
                                .item #{this}
                        if signed_up
                            .ui.basic.button
                                i.red.remove.icon
                                | Leave
                        else
                            .ui.basic.button
                                i.green.plus.icon
                                | Join
    
