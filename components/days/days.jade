template(name='scheduling')
    h1.ui.center.aligned.header Volunteer Management
    #add_day.ui.basic.button Add Day
    table.ui.definition.celled.selectable.table
        thead
            tr
                th
                th from 9:30 - 1:00
                th from 1:00 - 4:30
        tbody
            each volunteer_days
                tr
                    td #{formatted_date}
                    td 
                        .ui.list
                            each slot_1_volunteers
                                .item
                                    img.ui.avatar.image(src="{{c.url volunteer.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                                    .content 
                                        .header #{volunteer.profile.first_name} #{volunteer.profile.last_name}
                                        .description
                                            each volunteer.tags
                                                .ui.basic.small.label #{this}
                        if signed_up_for_first
                            #leave_first_shift.ui.basic.button
                                i.red.remove.icon
                                | Leave
                        else
                            #join_first_shift.ui.basic.button
                                i.green.plus.icon
                                | Join
                            
                    td 
                        .ui.list
                            each slot_2_volunteers
                                .item
                                    img.ui.avatar.image(src="{{c.url volunteer.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                                    .content 
                                        .header #{volunteer.profile.first_name} #{volunteer.profile.last_name}
                                        .description
                                            each volunteer.tags
                                                .ui.basic.small.label #{this}
                        if signed_up_for_second
                            #leave_second_shift.ui.basic.button
                                i.red.remove.icon
                                | Leave
                        else
                            #join_second_shift.ui.basic.button
                                i.green.plus.icon
                                | Join
    
