template(name='edit_button')
    if can_edit
        if editing
            #save.ui.basic.large.button(data-position='bottom center' data-tooltip='Save')
                i.green.check.icon
                | Save
        else
            #edit.ui.basic.large.button(data-position="bottom center" data-tooltip='Edit')
                i.blue.pencil.icon
                | Edit