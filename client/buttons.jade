template(name='voting')
    .ui.basic.icon.button
        i.thumbs.up.link.big.icon.vote_up(class=vote_up_button_class)
    .ui.basic.icon.button
        i.thumbs.down.link.big.icon.vote_down(class=vote_down_button_class)
        // |#{points}




template(name='published')
    // .ui.dividing.header Visibility
        .ui.large.blue.label
            +icon48 name='eye' classes='ui mini inline image'
        if can_edit
        .ui.large.blue.label(data-tooltip="Viewable but not attributed")
            +icon48 name='ignore' classes='ui mini inline image'
    div
        if can_edit
            #publish.ui.icon.compact.button(data-tooltip='Publish' class=published_class)
                +icon48 name='eye' classes='ui mini inline image'
                if is_published
                    | Published
            #publish_anonymously.ui.icon.compact.button(data-tooltip='Publish Anonymously' class=published_anonymously_class)
                +icon48 name='ignore' classes='ui mini inline image'
                if published_anonymously
                    |Anonymous
            #unpublish.ui.icon.compact.button(data-tooltip='Unpublish' class=private_class)
                +icon48 name='invisible' classes='ui mini inline image'
                if is_private
                    | Private
