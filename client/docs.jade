template(name='library')
    .ui.stackable.padded.grid
        .centered.row
            h1.ui.header Library
        .row
            .four.wide.column
                +tag_facet
                .ui.hidden.divider
                #add_doc.ui.compact.basic.fluid.button
                    i.green.plus.icon
                    |Add Doc
            .twelve.wide.column
                .ui.cards
                    each docs
                        +doc_card


template(name='doc_card')
    .ui.fluid.card
        .image
            a(href="/doc/#{_id}")
                img(src="{{c.url image_id  height=300 crop='fill' gravity='face' }}")
                if image_url
                    img.ui.centered.image(src=image_url)
            if youtube
                +youtube
        .content
            |!{content}
            each tags
                .ui.compact.button.doc_tag(class=tag_class) #{this}
            a.ui.right.floated.basic.icon.button(href="/doc/#{_id}")
                i.right.arrow.icon
                
                
template(name='doc')
    .ui.stackable.padded.grid
        with doc
            unless editing
                .row
                    .three.wide.column
                        a.ui.top.left.attached.basic.button(href="/library")
                            i.arrow.left.icon
                            |Library
                    .ten.wide.center.aligned.column
                        h1.ui.header View Document
                    .three.wide.center.aligned.column
                        +edit_button
                .row
                    .ten.wide.column
                        img.ui.centered.image(src="{{c.url image_id height=500 width=800 background='white' crop='lpad'}}")
                        if image_url
                            img.ui.centered.image(src=image_url)
                        +youtube
                        +content
                    .five.wide.column
                        each tags
                            .ui.basic.label #{this}
                        +author_info
            else
                .centered.row
                    h1.ui.center.aligned.header Edit Document
                .row
                    .twelve.wide.column
                        .ui.form
                            +tags
                            +image_id
                            +image_url
                            +youtube
                            +content
                    .four.wide.column
                        +edit_button
                        #delete_doc.ui.red.icon.button
                            i.trash.icon
